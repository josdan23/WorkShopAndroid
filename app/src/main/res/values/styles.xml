<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>
    </style>


    <style name="precio_detalle_texto" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorNegro</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="masinfo_detale_text" parent="TextAppearance.AppCompat.Caption">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="titulo_detalle" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#5F5F5F</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="titulo_item" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#5F5F5F</item>
    </style>
</resources>
